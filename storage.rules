rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite a cualquier usuario autenticado leer y escribir en cualquier ruta.
    // TODO: Refinar estas reglas en el futuro para mayor seguridad (ej. solo permitir subir a la propia carpeta).
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}